/* components/Adress/Adress.wxss */
.consignee-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx 40rpx;
  background: #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.consignee-info.small{
  width: 350rpx;
  height: 154rpx;
  overflow: hidden;
  padding: 20rpx 24rpx 24rpx;
  font-size: 24rpx;
}

.consignee-title{
  color: #000000;
  font-size: 36rpx;
}

.consignee-info.small .consignee-title{
  font-size: 26rpx;
}
