<!--components/Button/Button.wxml-->
<view class='city-picker'>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{provinces}}" wx:key="item.name" style="line-height: 50px">{{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" wx:key="item.name" style="line-height: 50px">{{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" wx:key="item.name" style="line-height: 50px">{{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>
