/* components/Button/Button.wxss */

.city-picker{
  background-color: #fff;
  position: relative;
  overflow: hidden;
  height: 476rpx
}
.mask{
  position: absolute;
  top: 0;
  z-index: 2;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
}

.picker-title{
  position: absolute;
  top: 50rpx;
  left: 0;
  right: 0;
  z-index: 9;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  font-weight: bold;
}

.pick-view{
  position: absolute;
  top: -100rpx;
  width: 100%;
  height: 500rpx;
}
.picked-item{
  height: 80rpx;
  color: #FF0000;
}
.pick-item{
  line-height: 72rpx;
  text-align: center;
}
