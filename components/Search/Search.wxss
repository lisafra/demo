/* components/Search/Search.wxss */

.search-container{
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.search-input{
  padding-left: 10rpx;
  line-height: 80rpx;
}

.search-btn{
  width: 20%;
  display: flex;
  justify-content: flex-end;
}

.icon-search{
  width: 35rpx;
  height: 35rpx;
}
